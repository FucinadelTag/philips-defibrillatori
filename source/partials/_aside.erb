<!-- Sidebar -->

<aside class="large-3 columns right-menu">

    <%= partial("banner_aside", :locals => { :bannerType => 'philips'}) %>

    <h5>Articoli recenti</h5>
    <ul class="side-nav">
        <% blog.articles[0...10].each do |article| %>
            <li><%= link_to article.title, article %></li>
        <% end %>
    </ul>

    <h5>Tag</h5>
    <ul class="side-nav">
        <% blog.tags.each do |tag, articles| %>
            <li><%= link_to tag+' ('+articles.size.to_s+')', tag_path(tag) %></li>
         <% end %>
    </ul>

</aside>